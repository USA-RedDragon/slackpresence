{
	"name": "slackpresence",
	"displayName": "slackpresence",
	"description": "Sets your Slack status to the file name and language you're working in",
	"version": "0.0.8",
	"publisher": "slackpresence",
	"repository": {
		"type": "git",
		"url": "https://github.com/USA-RedDragon/slackpresence.git"
	},
	"license": "GPL-2.0-only",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"badges": [
        {
            "href": "https://circleci.com/gh/USA-RedDragon/slackpresence",
            "url": "https://circleci.com/gh/USA-RedDragon/slackpresence/tree/master.svg?style=svg",
            "description": "CircleCI"
		},
		{
            "href": "https://marketplace.visualstudio.com/items?itemName=slackpresence.slackpresence",
            "url": "https://vsmarketplacebadge.apphb.com/version/slackpresence.slackpresence.svg",
            "description": "Visual Studio Marketplace"
		},
		{
            "href": "https://marketplace.visualstudio.com/items?itemName=slackpresence.slackpresence",
            "url": "https://vsmarketplacebadge.apphb.com/installs/slackpresence.slackpresence.svg",
            "description": "Visual Studio Marketplace Installs"
		},
		{
            "href": "https://marketplace.visualstudio.com/items?itemName=slackpresence.slackpresence",
            "url": "https://vsmarketplacebadge.apphb.com/rating-short/slackpresence.slackpresence.svg",
            "description": "Visual Studio Marketplace Rating"
		}
    ],
	"contributes": {
		"commands": [
			{
				"command": "slackpresence.enable",
				"title": "Enable Slack Presence in the Current Workspace"
			},
			{
				"command": "slackpresence.disable",
				"title": "Disable Slack Presence in the Current Workspace"
			}
		],
		"configuration": [
			{
				"title": "Slack Presence Configuration",
				"type": "object",
				"properties": {
					"slackpresence.authToken": {
						"type": "string",
						"default": "",
						"description": "Only modify this if you know what you are doing (most of you don't)"
					},
					"slackpresence.enabled": {
						"type": "boolean",
						"default": true,
						"description": "Controls if the Slack Presence should show across all workspaces"
					},
					"slackpresence.shareWorkspace": {
						"type": "boolean",
						"default": false,
						"description": "Controls if the Slack Presence should share your workspace name"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"pkgvars": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
